<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saraglattstein.hangman.MainActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="292dp"
        android:text="choose:"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="171dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_a"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="a" />

            <Button
                android:id="@+id/btn_b"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="b" />

            <Button
                android:id="@+id/btn_c"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="c" />

            <Button
                android:id="@+id/btn_d"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="d" />

            <Button
                android:id="@+id/btn_e"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="e" />

            <Button
                android:id="@+id/btn_f"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="f" />

            <Button
                android:id="@+id/btn_g"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="g" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_h"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="h" />

            <Button
                android:id="@+id/btn_i"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="i" />

            <Button
                android:id="@+id/btn_j"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="j" />

            <Button
                android:id="@+id/btn_k"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="k" />

            <Button
                android:id="@+id/btn_l"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="l" />

            <Button
                android:id="@+id/btn_m"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="m" />

            <Button
                android:id="@+id/btn_n"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="n" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="42.75"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_o"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="o" />

            <Button
                android:id="@+id/btn_p"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="p" />

            <Button
                android:id="@+id/btn_q"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="q" />

            <Button
                android:id="@+id/btn_r"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="r" />

            <Button
                android:id="@+id/btn_s"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="s" />

            <Button
                android:id="@+id/btn_t"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="t" />

            <Button
                android:id="@+id/btn_u"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="u" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="42.75"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_v"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="v" />

            <Button
                android:id="@+id/btn_w"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:text="w" />

            <Button
                android:id="@+id/btn_x"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="x" />

            <Button
                android:id="@+id/btn_y"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="y" />

            <Button
                android:id="@+id/btn_z"
                android:layout_width="52.5"
                android:layout_height="match_parent"
                android:text="z" />

        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/panel_3"
        android:layout_width="359dp"
        android:layout_height="309dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_gallows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_3"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/tv_1"
            android:contentDescription="gallows"
            app:srcCompat="@drawable/android_hangman_gallows" />

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_leg2"
            android:layout_alignTop="@+id/img_gallows"
            android:layout_marginTop="24dp"
            android:contentDescription="head"
            app:srcCompat="@drawable/android_hangman_head" />

        <ImageView
            android:id="@+id/img_arm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_head"
            android:layout_toEndOf="@+id/img_body"
            android:contentDescription="arm"
            app:srcCompat="@drawable/android_hangman_arm2" />

        <ImageView
            android:id="@+id/img_arm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_head"
            android:layout_toStartOf="@+id/img_body"
            android:contentDescription="arm"
            app:srcCompat="@drawable/android_hangman_arm1" />

        <ImageView
            android:id="@+id/img_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_head"
            android:layout_toStartOf="@+id/img_leg1"
            android:contentDescription="body"
            app:srcCompat="@drawable/android_hangman_body" />

        <ImageView
            android:id="@+id/img_leg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_body"
            android:layout_toEndOf="@+id/img_gallows"
            android:contentDescription="leg"
            app:srcCompat="@drawable/android_hangman_leg2" />

        <ImageView
            android:id="@+id/img_leg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_leg1"
            android:layout_alignEnd="@+id/img_body"
            android:contentDescription="leg"
            app:srcCompat="@drawable/android_hangman_leg1" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/tv_2"
            android:layout_alignBottom="@+id/tv_2"
            android:layout_alignEnd="@+id/img_head"
            android:background="@drawable/letter_bg"
            android:textAllCaps="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/tv_1"
            android:layout_alignBottom="@+id/tv_1"
            android:layout_alignStart="@+id/img_gallows"
            android:background="@drawable/letter_bg"
            android:textAllCaps="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/tv_3"
            android:layout_alignBottom="@+id/tv_3"
            android:layout_toEndOf="@+id/img_leg1"
            android:background="@drawable/letter_bg"
            android:textAllCaps="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/tv_1"
            android:layout_alignBottom="@+id/tv_1"
            android:layout_alignParentEnd="true"
            android:background="@drawable/letter_bg"
            android:textAllCaps="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:background="@drawable/letter_bg"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_head"
            android:layout_alignParentEnd="true"
            android:text="New Game" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

