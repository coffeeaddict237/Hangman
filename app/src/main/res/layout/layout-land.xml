            <Button
                android:id="@+id/btn_t"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="t" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_u"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="u" />

            <Button
                android:id="@+id/btn_v"
                android:layout_width="52.5dp"
