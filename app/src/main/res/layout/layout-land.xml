            <Button
                android:id="@+id/btn_i"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="i" />

            <Button
                android:id="@+id/btn_j"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="j" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_k"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="k" />

            <Button
                android:id="@+id/btn_l"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="l" />

            <Button
                android:id="@+id/btn_m"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="m" />

            <Button
                android:id="@+id/btn_n"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="n" />

            <Button
                android:id="@+id/btn_o"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="o" />

        </TableRow>

        <TableRow
            android:layout_width="330dp"
            android:layout_height="37dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_p"
                android:layout_width="52.5dp"
                android:layout_height="match_parent"
                android:text="p" />

            <Button
                android:id="@+id/btn_q"
                android:layout_width="52.5dp"
